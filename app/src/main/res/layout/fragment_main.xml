<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.williamsun.hophacksspring16.MainActivityFragment"
    tools:showIn="@layout/activity_main">


    <LinearLayout
        android:id="@+id/Heartrate"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:clickable="false"
        android:minHeight="275px"
        android:weightSum="1"
        android:padding="15px"
        android:layout_marginRight="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="3sp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="255dp"
            android:layout_height="match_parent"
            android:gravity="left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Heartrate (BPM)"
                android:id="@+id/textView"
                android:textSize="26dp" />

            <TextView
                android:layout_width="247dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="An indicator of stress level, exertion, and cardiac health."
                android:id="@+id/textView2"
                android:textSize="14dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/heartRateText"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="75"
            android:textAlignment="center"
            android:textSize="30sp"
            android:layout_weight="1"
            android:gravity="right" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Altimeter"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:clickable="false"
        android:minHeight="275px"
        android:weightSum="1"
        android:padding="15px"
        android:layout_marginRight="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="3sp"
        android:layout_marginBottom="3sp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="255dp"
            android:layout_height="match_parent"
            android:gravity="left" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Change in Altitude (cm/s)"
                android:id="@+id/textView4"
                android:textSize="26dp" />

            <TextView
                android:layout_width="247dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Vertical velocity of band, from the altimeter"
                android:id="@+id/textView5"
                android:textSize="14dp" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="101"
            android:id="@+id/altimeterText"
            android:textAlignment="center"
            android:textSize="30sp"
            android:layout_weight="1"
            android:gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/GSR"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:clickable="false"
        android:minHeight="275px"
        android:weightSum="1"
        android:padding="15px"
        android:layout_marginRight="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="3sp"
        android:layout_marginBottom="3sp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="255dp"
            android:layout_height="match_parent"
            android:gravity="left" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="GSR (kohms)"
                android:id="@+id/textView7"
                android:textSize="26dp" />

            <TextView
                android:layout_width="247dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Galvanic Skin Response: an indicator of emotional arousal and stress level."
                android:id="@+id/textView8"
                android:textSize="14dp" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="20"
            android:id="@+id/GSRText"
            android:textAlignment="center"
            android:textSize="30sp"
            android:layout_weight="1"
            android:gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Accel"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:clickable="false"
        android:minHeight="275px"
        android:weightSum="1"
        android:padding="15px"
        android:layout_marginRight="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="3sp"
        android:layout_marginBottom="3sp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="255dp"
            android:layout_height="match_parent"
            android:gravity="left"
            android:layout_weight="0.52">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Acceleration (g)"
                android:id="@+id/textView10"
                android:textSize="26dp" />

            <TextView
                android:layout_width="247dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Measurements of the MSBand&apos;s movements in real time."
                android:id="@+id/textView11"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="X: 1.25"
                android:id="@+id/accelX"
                android:textAlignment="gravity"
                android:gravity="right"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Y: 3.75"
                android:id="@+id/accelY"
                android:textAlignment="gravity"
                android:gravity="right"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Z: 2.62"
                android:id="@+id/accelZ"
                android:textAlignment="gravity"
                android:gravity="right"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/RRInt"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:clickable="false"
        android:minHeight="275px"
        android:weightSum="1"
        android:padding="15px"
        android:layout_marginRight="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="3sp"
        android:layout_marginBottom="10sp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="255dp"
            android:layout_height="match_parent"
            android:gravity="left" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="RR Interval (s)"
                android:id="@+id/textView15"
                android:textSize="26dp" />

            <TextView
                android:layout_width="247dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="The interval of a single heartbeat. An indicator of cardiac health."
                android:id="@+id/textView16"
                android:textSize="14dp" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/RRIntervalText"
            android:textAlignment="center"
            android:textSize="30sp"
            android:layout_weight="1"
            android:gravity="right" />
    </LinearLayout>

</LinearLayout>
